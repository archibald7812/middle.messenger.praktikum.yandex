{
	"ts-node": {
		"files": true
	},
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": false,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmit": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"suppressExcessPropertyErrors": false,
		"target": "es2016",
	},
	"exclude": [
		"node_modules",
		"dist",
		".parcel-cache"
	],
	"include": [
		"src",
		".eslintrc.js",
		"./src/**/*.ts",
		"vite.config.js"
	]
}