"editor.formatOnSave": true,
"[css]": {
	"editor.formatOnSave": false
},
"[scss]": {
	"editor.formatOnSave": false
},
"editor.codeActionsOnSave": {
	"source.fixAll.stylelint": true
},
"stylelint.enable": true,
"stylelint.config": {
	"rules": {
			"declaration-empty-line-before": ["always", {
			"except": ["first-nested"],
			"ignore": ["after-declaration"],
			"ignoreAtRules": ["else"]
   	}]
	}
}
